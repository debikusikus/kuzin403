SELECT employees.first_name, employees.last_name, departments.dept_name, employees.hire_date, salaries.salary from employees,departments,salaries,dept_emp WHERE (employees.emp_no=dept_emp.emp_no) and (employees.hire_date<'1992-01-01') AND (employees.hire_date>'1987-01-01') AND (salaries.salary = (SELECT MAX(salaries.salary) FROM salaries)) AND (dept_emp.dept_no = departments.dept_no) ORDER BY `salaries`.`salary` DESC LIMIT 100;
